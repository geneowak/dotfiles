# Font settings
font-family = VictorMono Nerd Font Mono
font-style = Light
font-style-bold = Bold
font-style-italic = Italic
font-style-bold-italic = Bold Italic
font-size = 14

# Line height (Ghostty adds to default, so 80% extra â‰ˆ 180% total)
adjust-cell-height = 80%

# Cursor settings
cursor-style-blink = false

# Bell settings (empty value disables all bell features)
bell-features =

# Window settings
# window-decoration = false
window-padding-x = 10
window-padding-y = 10

# Clipboard keybindings (these are defaults in Ghostty, but explicit for clarity)
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = shift+insert=paste_from_clipboard

# Custom key sequences for Neovim compatibility
# Ability to map ctrl+tab (https://www.reddit.com/r/neovim/comments/uc6q8h/ability_to_map_ctrl_tab_and_more/)
keybind = ctrl+enter=text:\x1b[13;5u
keybind = shift+enter=text:\x1b[13;2u
keybind = ctrl+tab=text:\x1b[9;5u
keybind = ctrl+shift+tab=text:\x1b[9;6u

# Theme (uses custom theme from themes/custom-cobalt2.toml)
theme = custom-cobalt2.toml
